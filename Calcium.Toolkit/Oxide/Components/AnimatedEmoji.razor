    private string _baseURL = "https://raw.githubusercontent.com/vnsnippets/developers-conference/master/.resources";

    [Parameter]
    public string? Path { get; set; }

    [Parameter]
    public string? Name { get; set; } = "Animated Emoji";

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }
}
