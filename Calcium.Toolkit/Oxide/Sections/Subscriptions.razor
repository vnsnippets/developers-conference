@using Calcium.Core.Schema
@using Calcium.Core.Schema.Sections
@using Calcium.Toolkit.Oxide.Layouts
@using Calcium.Toolkit.Oxide.Components

@if (Items.Any())
{
    <div class="subscription-items">
        @foreach (var item in Items.OrderBy((e) => e.Index))
        {
            <a class="item" href="@item.Link" data-featured-item="@item.Featured">
                @* <Vector Type="item.Icon" Width="60" Height="60" data-animate-scroll="zoom-in-zoom-out" data-animate-delay /> *@
                <Emoji Path="@item.Icon" data-emoji-size="65" data-animate-scroll="zoom-in-zoom-out" />

                <div class="item-body">
                    @if (!string.IsNullOrEmpty(item.Title))
                    {
                        <h4 class="title">@item.Title</h4>
                    }

                    @if (!string.IsNullOrEmpty(item.Caption))
                    {
                        <p class="details">@item.Caption</p>
                    }
                </div>
            </a>
        }
    </div>
}
<div class="children">
    @ChildContent
</div>

@code {
    [Parameter]
    public List<Content> Items { get; set; } = [];

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
