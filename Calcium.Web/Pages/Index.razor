@page "/"

@using Calcium.Core
@using Calcium.Core.Schema.Layouts
@using Calcium.Core.Schema.Sections
@using Calcium.Core.Schema.Widgets
@using Calcium.Toolkit.Oxide.Sections
@using Calcium.Toolkit.Oxide.Widgets
@using Calcium.Toolkit.Oxide.Layouts
@using Calcium.Web.Sections

<PageTitle>Calcium | Home</PageTitle>

<Header Parameters=@Site.Sections.Hero>
    <Countdown Parameters=@Site.Widgets.Countdown data-animate-load>
        <AddToCalendar Event=@Site.Widgets.Countdown.Event />
    </Countdown>
</Header>

<SectionWithTitle Title=@metrics.Title Caption=@metrics.Caption>
    <Metrics Items=@metrics.Content data-animate-scroll="drop-in" />
    <Gallery Parameters="@gallery" data-animate-scroll="drop-in" />
</SectionWithTitle>

<SectionWithTitle Title="@features.Title" Caption="@features.Caption">
    <Features Items=@features.Content data-animate-scroll="drop-in" />
</SectionWithTitle>

<SectionWithTitle Title=@subscriptions.Title Caption=@subscriptions.Caption>
    <Subscriptions Items=@subscriptions.Content data-animate-scroll="drop-in">
        <WaitlistCallToAction Parameters=@waitlist />
    </Subscriptions>
</SectionWithTitle>

@code {
    private ContentWithTitle<List<Content>> metrics = Site.Sections.Metrics;
    private string[] gallery = Site.Sections.Gallery;
    // private ContentWithTitle<List<Testimonial>> testimonials = Site.Widgets.Testimonials;
    private ContentWithTitle<List<Feature>> features = Site.Widgets.Features;
    private ContentWithTitle<List<Content>> subscriptions = Site.Sections.Subscriptions;
    private Waitlist waitlist = Site.Widgets.Waitlist;
}