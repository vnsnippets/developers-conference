@page "/"

@using Calcium.Toolkit.Oxide.Sections
@using Calcium.Toolkit.Oxide.Widgets
@using Calcium.Toolkit.Oxide.Layouts
@using Calcium.Web.Sections

@using Calcium.Toolkit.Schema.Sections
@using Calcium.Toolkit.Schema.Layouts

<PageTitle>Calcium | Home</PageTitle>

<Header Parameters=@Site.Sections.Hero>
    <Countdown Parameters=@Site.Widgets.Countdown data-animate-load>
        <AddToCalendar Event=@Site.Widgets.Calendar />
    </Countdown>
</Header>

<SectionWithTitle Title=@Site.Sections.Metrics.Title Caption=@Site.Sections.Metrics.Caption>
    <Metrics Items=@Site.Sections.Metrics.Content data-animate-scroll="drop-in" />
    <Gallery Parameters="@Site.Sections.Gallery" data-animate-scroll="drop-in" />
</SectionWithTitle>

<SectionWithTitle Title="@Site.Sections.Features.Title" Caption="@Site.Sections.Features.Caption">
    <Features Items=@Site.Sections.Features.Content data-animate-scroll="drop-in" />
</SectionWithTitle>

<SectionWithTitle Title=@Site.Sections.Subscriptions.Title Caption=@Site.Sections.Subscriptions.Caption>
    <Subscriptions Items=@Site.Sections.Subscriptions.Content data-animate-scroll="drop-in">
        <WaitlistCallToAction Parameters=@Site.Widgets.Waitlist />
    </Subscriptions>
</SectionWithTitle>